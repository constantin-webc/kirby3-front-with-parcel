{
  "name": "kirby3-front-with-parcel",
  "version": "1.0.0",
  "description": "Parcel workfow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/constantinjoly/kirby3-front-with-parcel"
  },
